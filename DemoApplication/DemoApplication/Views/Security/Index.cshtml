<div class="btn-toolbar form-inline">

    <div class="btn-group">
        <a class="btn" ng-class="{disabled:display=='tiles'}" data-ng-click="changeDisplay('tiles')">
            <i class="icon-th-large"></i>
        </a>
        <a class="btn" ng-class="{disabled:display=='list'}" data-ng-click="changeDisplay('list')">
            <i class="icon-align-justify"></i>
        </a>
    </div>

    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Sort by: <strong>{{ sortLabel }}</strong>
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="#" ng-click="predicate = 'lastName'; reverse=false; sortLabel='Name A-Z'">Name A-Z</a>
                <a href="#" ng-click="predicate = 'lastName'; reverse=true; sortLabel='Name Z-A'">Name Z-A</a>
                <a href="#" ng-click="predicate = 'overdue.length'; reverse=true; sortLabel='Overdue First'">Overdue First</a>
                <a href="#" ng-click="predicate = 'dateInitiated'; reverse=false; sortLabel='Date Initiated'">Date Initiated</a>
                <a href="#" ng-click="predicate = 'dateDue'; reverse=false; sortLabel='Date Due'">Date Due</a>
            </li>
        </ul>
    </div>

    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Filter By:
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                @*<div>
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-search"></i></span>
                        <input type="text" placeholder="Filter..." />
                    </div>
                </div>*@
                <ul class="collapsible" data-title="Status">
                    <li>
                        <radio-filter list="summary" filter="filter.status" display="status" value="status" />
                    </li>
                </ul>
                <ul class="collapsible" data-title="Assigned To">
                    <li>
                        <radio-filter list="assignables" filter="filter.assignedTo" />
                    </li>
                </ul>
                <ul class="collapsible" data-title="Team">
                    <li>
                        <radio-filter list="teams" filter="filter.team" />
                    </li>
                </ul>
                <ul class="collapsible" data-title="Department">
                    <li>
                        <radio-filter list="departments" filter="filter.department" />
                    </li>
                </ul>
            </li>
        </ul>
    </div>
    <div class="btn-group">
        <input type="text" class="input-xxlarge" placeholder="Type to search..." ng-model="query" />
    </div>
</div>

<div data-ng-switch on="display">
    <table class="table table-striped table-hover table-clickable" ng-switch-when="list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Open</th>
                <th>Overdue</th>
                <th>Closed</th>
                <th>Tasks</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-click="goToDetails(item)" data-ng-repeat="item in employees | employeeFilter:filter | searchFilter:'name':query | orderBy:predicate:reverse">
                <td>{{item.name}}</td>
                <td>{{item.counts.open}}</td>
                <td>{{item.counts.overdue}}</td>
                <td>{{item.counts.closed}}</td>
                <td>{{item.counts.total()}}</td>
            </tr>
        </tbody>
    </table>

    <div class="span12 tiles" ng-switch-when="tiles">
        <tile data-mode="list"
            data-person="item"
            data-filter="nofilter"
            data-ng-repeat="item in employees| employeeFilter:filter | searchFilter:'name':query | orderBy:predicate:reverse" />
    </div>
</div>

