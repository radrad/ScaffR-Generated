@section AltNav
{
    <p>
        <button type="button" class="btn btn-inverse" data-ng-click="open()">
            Add Group <i class="icon-plus"></i>
        </button>
        <div modal="shouldBeOpen" close="close()" options="opts">
            <div class="modal-header">
                <h4>I'm a modal!</h4>
            </div>
            <div class="modal-body">
                This is where the middle goes
            </div>
            <div class="modal-footer">
                <button class="btn btn-warning cancel" ng-click="close()">Cancel</button>
            </div>
        </div>
    </p>
}

<style>
    .selected {
        color: red !important;
    }
</style>
<div class="btn-toolbar form-inline">

    <div class="btn-group">
        <a class="btn" ng-class="{disabled:display=='tiles'}" data-ng-click="changeDisplay('tiles')">
            <i class="icon-th-large"></i>
        </a>
        <a class="btn" ng-class="{disabled:display=='list'}" data-ng-click="changeDisplay('list')">
            <i class="icon-align-justify"></i>
        </a>
    </div>

    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Sort by: <strong>{{ sortLabel }}</strong>
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
            <li>
                <a href="#" ng-click="predicate = 'name'; reverse=false; sortLabel='Name A-Z'">Name A-Z</a>
                <a href="#" ng-click="predicate = 'name'; reverse=true; sortLabel='Name Z-A'">Name Z-A</a>
                <a href="#" ng-click="predicate = 'overdue.length'; reverse=true; sortLabel='Overdue First'">Overdue First</a>
                <a href="#" ng-click="predicate = 'dateInitiated'; reverse=false; sortLabel='Date Initiated'">Date Initiated</a>
                <a href="#" ng-click="predicate = 'dateDue'; reverse=false; sortLabel='Date Due'">Date Due</a>
            </li>
        </ul>
    </div>

    <div class="btn-group">
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">Filter By:
            <span class="caret"></span>
        </a>
        <ul class="dropdown-menu nav nav-list">
            <li>
                <input type="text" placeholder="Filter..." /></li>
            <li>
                <label class="nav-header">Status</label>
                <checkbox-filter list="summary" filter="filter.status" display="status" value="status" />
            </li>
            <li>
                <label class="nav-header">Assigned To</label>
                <checkbox-filter list="assignables" filter="filter.assignedTo" />
            </li>
            <li>
                <label class="nav-header">Team</label>
                <radio-filter list="teams" filter="filter.team" />
            </li>
            <li>
                <label class="nav-header">Department</label>
                <radio-filter list="departments" filter="filter.department" />
            </li>
        </ul>
    </div>
    <div class="btn-group">
        <input type="text" class="input-xxlarge" placeholder="Type to search..." ng-model="query" />
    </div>
</div>

<div data-ng-switch on="display">
    <table class="table table-striped" ng-switch-when="list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Open</th>
                <th>Overdue</th>
                <th>Closed</th>
                <th>Tasks</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="item in employees | employeeFilter:filter | searchFilter:'name':query | orderBy:predicate:reverse">
                <td><a href="#">{{item.name}}</a></td>
                <td>{{item.open.length}}</td>
                <td>{{item.overdue.length}}</td>
                <td>{{item.closed.length}}</td>
                <td>{{item.tasks.length}}</td>
            </tr>
        </tbody>
    </table>

    <div class="span12 tiles" ng-switch-when="tiles">
        <tile person="item"
            data-ng-repeat="item in employees| employeeFilter:filter | searchFilter:'name':query | orderBy:predicate:reverse" />
    </div>
</div>

