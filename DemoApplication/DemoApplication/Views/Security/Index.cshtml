@{
    Layout = "~/Views/Shared/Cassette.cshtml";
}

@Html.Partial("Header")

@if (ViewBag.ShowMainMenu == true)
{
    @Html.MvcSiteMap("System").MainMenu(true, 3)
}

@if (ViewBag.ShowBreadcrumb == true)
{
    @Html.MvcSiteMap("System").Breadcrumb()
}
<div class="container-fluid">
    <div class="row-fluid">
        <div data-ng-app="application" class="ng-cloak span12" data-ng-controller="mainController">
            <hr />
            <ul class="nav nav-pills pull-left" data-ng-show="showBackLink()">
                <li><a href="" data-ng-click="goBack()">Back to {{backLinkText}}</a></li>
            </ul>
            <div class="pull-right">
                <div class="dropdown">
                    <a href="#" class="btn dropdown-toggle" data-toggle="dropdown">Create <i class="icon-plus"></i></a>
                    <ul class="dropdown-menu">
                        <li><a href="#/tasks/edit">Task</a></li>
                        <li><a href="#/templates/detail/new">Template</a></li>
                        <li><a href="#/teams/detail/new">Team</a></li>
                    </ul>
                </div>
            </div>
            <ul class="nav nav-pills pull-right">
                <li><a href="#/mytasks">My Tasks</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Dashboard <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#/employees">Employees</a></li>
                        <li><a href="#/teams">Teams</a></li>
                        @*<li><a href="#/approvers">Approvers</a></li>*@
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Settings <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="#/templates">Templates</a></li>
                        <li><a href="#/teams">Teams</a></li>
                        <li><a href="#/tasks">Tasks</a></li>
                    </ul>
                </li>
            </ul>
            <div class="clearfix"></div>
            <div data-ng-view=""></div>
        </div>
    </div>
</div>
