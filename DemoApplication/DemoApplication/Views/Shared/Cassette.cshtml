@{
    Bundles.Reference("content/less/site.less");
    Bundles.Reference("scripts/lib/jquery");
    Bundles.Reference("scripts/lib/angular");
    Bundles.Reference("scripts/lib/angular-bootstrap");
    Bundles.Reference("scripts/lib/angular-resource");
    Bundles.Reference("scripts/lib/bootstrap");
    Bundles.Reference("scripts/lib/bootstrap-datepicker");
    Bundles.Reference("scripts/lib/ckeditor");
    //Bundles.Reference("scripts/lib/jquery-ui");
    Bundles.Reference("scripts/lib/jquery-tmpl");
    Bundles.Reference("scripts/lib/jquery-plugins");
    //Bundles.Reference("scripts/lib/jquery-fileupload");
    Bundles.Reference("scripts/lib/underscore");
    Bundles.Reference("scripts/lib/moment");
    Bundles.Reference("scripts/filters");
    Bundles.Reference("scripts/services");
    Bundles.Reference("scripts/directives");
    Bundles.Reference("scripts/global");    
}

<!doctype html>
<html lang="en" data-ng-app="application">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Html.GetPageTitle()</title>
    @Bundles.RenderStylesheets()
    @Bundles.RenderScripts("head")
</head>

@using (Html.AngularScope(tagName: "body", htmlAttributes: new { @class = "ng-cloak" }))
{
    @RenderBody()

    @Html.Partial("_Modal")

    @Bundles.RenderScripts()
    @Bundles.RenderScripts("custom")
    @Bundles.RenderScripts("bottom")
}

</html>
